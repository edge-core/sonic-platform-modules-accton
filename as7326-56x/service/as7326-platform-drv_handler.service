[Unit]
Description=Accton AS7326-56X Platform Drv Monitoring service
Before=pmon.service
After=as7326-platform-monitor.service
DefaultDependencies=no

[Service]
ExecStart=/usr/local/bin/accton_drv_handler.py
KillSignal=SIGKILL
SuccessExitStatus=SIGKILL

# Resource Limitations
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
