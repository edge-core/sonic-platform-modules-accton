[Unit]
Description=Accton AS7326-56X Platform Drv Monitoring service
Before=pmon.service
After=sysinit.target
#After=as7326-platform-monitor.service
DefaultDependencies=no

[Service]
ExecStart=/usr/local/bin/accton_handle_mac.sh
KillSignal=SIGKILL
SuccessExitStatus=SIGKILL

# Resource Limitations
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
